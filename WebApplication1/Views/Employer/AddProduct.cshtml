@model MagazinWeb.Models.ProductsModel
@{
    ViewData["Title"] = "AddProduct";
}

<h2>Add Product</h2>

<hr />
<div class="container">
    <div class="flex-container">
        <form asp-action="AddProduct" asp-route-returnurl="@ViewData["ReturnUrl"]" enctype="multipart/form-data">
            <div class="col">
                <!--<div asp-validation-summary="All" class="text-danger"></div> -->
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">

                    <label asp-for="Cantitate" class="control-label"></label>
                    <input asp-for="Cantitate" class="form-control" />
                    <span asp-validation-for="Cantitate" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class=" flex-container ">
                <div class="col">

                    <div class="form-group">
                        <label asp-for="TipProdus" class="control-label"></label>
                        <input asp-for="TipProdus" class="form-control" />
                        <span asp-validation-for="TipProdus" class="text-danger"></span>
                    </div>
            

                    <div class="form-group">
                        <input type="submit" value="AddProduct1" class="btn btn-default" />
                    </div>
                </div>

            </div>

        </form>
    </div>
    <div>
        <a href="javascript:history.go(-1)">Back</a>
    </div>
